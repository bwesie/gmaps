<p id="notice"><%= notice %></p>

<div style="margin-left: 10px;">

  <h1>Destinations</h1>

  <table>
    <thead>
      <tr>
        <th>City</th>
        <th>Country</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @destinations.each do |destination| %>
        <tr>
          <td><%= destination.city %> </td>
          <td><%= destination.country %> </td>
          <td><%= destination.latitude %> </td>
          <td><%= destination.longitude %> </td>
          <td><%= link_to 'Show', destination, class: "btn btn-info btn-sm" %></td>
          <td> | </td>
          <td><%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-warning btn-sm" %></td>
          <td> | </td>
          <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Destination', new_destination_path, class: "btn btn-success" %>

</div>
